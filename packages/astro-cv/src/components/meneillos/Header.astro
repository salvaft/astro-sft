---
import Social from "./Social.astro";
import type {CollectionEntry} from "astro:content";

interface Props {
  letter?: boolean;
  personal:CollectionEntry<"personal">;
}
const { letter, personal } = Astro.props;

---

<header class:list={{ coverLetter: letter }}>
  <h1><span class="name">{personal.data.name}</span> {personal.data.surname}</h1>
  <div class="wrapper">
    <div class="diploma">{personal.data.profession}</div>
    <hr />
    <span style={letter ? { display: "inline-block" } : { display: "none" }}>
      -</span
    >
    <Social social={personal.data.social}/>
  </div>
</header>
<style>
  .coverLetter {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-left: auto;
    background-color: var(--azul);
    color: var(--blanco);
    text-align: center;
    width: fit-content;
    hr {
      display: none;
    }
    h1 {
      font-size: var(--step-2);
      margin-left: auto;
    }
    .wrapper {
      display: flex;
      gap: 0.5rem;
      span {
        display: block !important;
      }
      :global(ul) {
        gap: 0.5rem;
      }
      :global(li::before) {
        margin-right: 0.5rem;
      }
    }
  }

  .wrapper {
    display: grid;
    gap: 0.5rem;
    not(.coverLetter) span {
      display: none;
    }
  }
  p {
    font-size: var(--step--3);
    text-align: center;
  }
  header {
    font-variant-caps: small-caps;
  }
  .name {
    font-weight: 400;
  }
  .diploma {
    text-align: center;
    color: var(--azul-muted);
  }
  header hr {
    background-image: linear-gradient(
      90deg,
      transparent,
      rgba(0, 0, 0, 0.75),
      transparent
    );
    height: 0.7px;
    width: 100%;
    border: 0;
  }
  h1 {
    font-size: var(--step-3);
    font-weight: bold;
    font-family: var(--font-hedvig);
    text-align: center;
  }
</style>

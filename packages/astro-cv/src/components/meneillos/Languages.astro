---
import type {CollectionEntry} from "astro:content";

import SectionHeading from "./SectionHeading.astro";
interface Props {
  languages: CollectionEntry<"languages">;
  lang: keyof typeof i18n;
}
const { languages, lang } = Astro.props;

import i18n from "#/i18n/i18n.json"

---

{
  languages && (
    <section>
      <SectionHeading>{i18n[lang].languages.title}</SectionHeading>
      <ul>
        {Object.entries(languages.data).map(([language, entry]) => {
          return (
            <li>
              {`${language}: `} {entry.proficiency[lang]}
            </li>
          );
        })}
      </ul>
    </section>
  )
}

<style>
  section {
    font-family: var(--font-poppins);
    font-size: var(--step--2);
    color: var(--gris-oscuro);
    p {
      font-weight: 300;
      line-height: var(--lh);
    }
  }
</style>

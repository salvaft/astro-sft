---
interface Props {
  position: string;
  organization: string;
  where: string;
  when: string;
  description: string;
}
const { position, organization, where, when, description } = Astro.props;
---

<style>
  .two-columns {
    display: grid;
    grid-template-columns: 1fr 3fr;
    font-size: var(--step--2);
  }
  article {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  h2 {
    margin-bottom: 0.25rem;
    font-weight: bold;
    font-size: var(--step--2);
    text-transform: uppercase;
  }
  h3 {
    font-weight: normal;
    margin-bottom: 0.5rem;
  }
  .when {
    font-weight: bold;
    display: block;
  }
</style>

<div class="two-columns">
  <span class="when">{when}</span>
  <article>
    <header>
      <h2>{position}</h2>
      <h3>{organization} - {where}</h3>
      <p set:html={description} />
    </header>
  </article>
</div>

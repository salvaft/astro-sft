---
import type { CollectionEntry } from "astro:content";

interface Props{
  social: CollectionEntry<"personal">["data"]["social"];
}
const {
  social
} = Astro.props;
---

<style>
  .contact {
    ul {
      padding-left: 0;
    }
    a span {
      margin-left: 4rem;
    }
  }
  .separated {
    &::before {
      content: "";
      display: inline-block;
      height: 100%;
      width: 3rem;
      background-color: var(--yellow);
      margin-right: 1rem;
    }
    height: 1.5rem;
    display: flex;
    background-color: var(--gris-muy-oscuro);
    span {
      align-self: center;
    }
  }
  a {
    text-decoration: none;
    color: inherit;
    display: block;
    &:hover {
      text-decoration: underline;
    }
  }
  li {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    margin-bottom: 1rem;
  }
</style>

<div class="contact">
  <ul>
    {
      Object.entries(social).map(async (entry) => {
        const [socialNetwork, {href,username}] = entry;
        return (
          <li>
            <h3 class="separated">
              <span>{socialNetwork}</span>
            </h3>
            <a href={href}>
              <span>{username}</span>
            </a>
          </li>
        );
      })
    }
  </ul>
</div>

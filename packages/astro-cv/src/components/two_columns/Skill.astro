---
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"skills">["data"]["short"];
const { percentage, key: name } = Astro.props;
---

<style define:vars={{ percentage }}>
  h3 {
    font-size: var(--step--2);
    font-weight: normal;
    border-bottom: 4px solid var(--gris-claro);

    position: relative;
    &::after {
      content: "";
      display: block;
      left: 0;
      right: calc(100% - var(--percentage));
      position: absolute;
      border-bottom: 4px solid var(--dark-gray);
    }
  }
</style>
<div>
  <h3>{name}</h3>
</div>

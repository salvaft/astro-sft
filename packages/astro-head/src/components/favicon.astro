---
interface Props {
  input: string;
}
const { input } = Astro.props;

const sizes = [
  16, 32, 64, 196, 160, 96, 64, 32, 16, 57, 114, 72, 144, 60, 120, 76, 152, 180,
];
if (import.meta.env.DEV) {
  const { generateFavicons } = await import("../generator/index.js");

  generateFavicons({ input, sizes });
}
